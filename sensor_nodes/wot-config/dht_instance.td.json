{
  "@context": ["https://www.w3.org/2019/wot/td/v1", { "@language": "de" },
    { "namib": "https://namib.uni-bremen.de/wot#" }],
  "@type": ["namib:SensorNode"],
  "titles": {
    "de": "NAMIB-DHT-Sensor-Node",
    "en": "NAMIB DHT Sensor Node"
  },
  "descriptions": {
    "de": "A sensor node designed to be used in the undergraduate project NAMIB",
    "en": "A Sensor Node f√ºr den Einsatz im Bachelorprojkt NAMIB"
  },
  "properties": {
    "temperature": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_temp_handler",
          "op": "readproperty",
          "href": "/temperature/temperature",
          "cov:methodName": "GET"
        }
      ]
    },
    "temperature_units": {
      "type": "integer",
      "description": "The integer value represents one of the enums C, F, K",
      "forms": [
        {
          "riot_os:handler_function": "_dht_temp_unit_handler",
          "op": "readproperty",
          "href": "/temperature/unit",
          "cov:methodName": "GET"
        }
      ]
    },
    "temperature_range": {
      "type": "object",
      "forms": [
        {
          "riot_os:handler_function": "_dht_temp_range_handler",
          "op": "readproperty",
          "href": "/temperature/range",
          "cov:methodName": "GET"
        }
      ]
    },
    "temperature_step": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_temp_step_handler",
          "op": "readproperty",
          "href": "/temperature/step",
          "cov:methodName": "GET"
        }
      ]
    },
    "temperature_precision": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_temp_precision_handler",
          "op": "readproperty",
          "href": "/temperature/precision",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_value": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_handler",
          "op": "readproperty",
          "href": "/humidity/value",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Min_Measured_Value": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_min_value_handler",
          "op": "readproperty",
          "href": "/humidity/min_measured",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Max_Measured_Value": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_max_value_handler",
          "op": "readproperty",
          "href": "/humidity/max_measured",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Min_Range_Value": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_min_range_handler",
          "op": "readproperty",
          "href": "/humidity/min_range",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Max_Range_Value": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_max_range_handler",
          "op": "readproperty",
          "href": "/humidity/max_range",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Units": {
      "type": "string",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_unit_handler",
          "op": "readproperty",
          "href": "/humidity/unit",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Precision": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_precision_handler",
          "op": "readproperty",
          "href": "/humidity/precision",
          "cov:methodName": "GET"
        }
      ]
    },
    "humidity_Step": {
      "type": "number",
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_step_handler",
          "op": "readproperty",
          "href": "/humidity/step",
          "cov:methodName": "GET"
        }
      ]
    }
  },
  "actions": {
    "humidity_Reset_Min_and_Max_Measured_Values": {
      "forms": [
        {
          "riot_os:handler_function": "_dht_hum_reset_min_max_handler",
          "op": "invokeaction",
          "href": "/humidity/reset_min_max",
          "cov:methodName": "POST"
        }
      ]
    }
  }
}
